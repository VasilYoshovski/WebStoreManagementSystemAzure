@model StoreSystem.Data.Models.Warehouse

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete a warehouse</h1>

@if (User.IsInRole(ROLES.Admin))
{
    <h3>Are you sure you want to delete this warehouse?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Address.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.City)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.City.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Country)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Country.Name)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="WarehouseID" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    </div>
}
