@model StoreSystem.Data.Models.Supplier

@{
    ViewData["Title"] = "Details";
}

<h1>Supplier's details</h1>

@if (User.IsInRole(ROLES.Admin) || User.IsInRole(ROLES.OfficeStaff))
{
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UIN)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UIN)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Address.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.City)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.City.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Country)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Country.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StoreUserId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StoreUserId)
            </dd>
        </dl>
    </div>
    <div class="form-group">
        <a asp-action="Edit" asp-route-id="@Model.SupplierID" class="btn btn-primary">Edit</a>
    </div>
}
<div>
    <a asp-action="Index">Back to List</a>
</div>
